<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StaffActivity"
    tools:layout_editor_absoluteY="81dp"
    android:keepScreenOn="true">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="360dp"
        android:layout_height="237dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/bass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:visibility="visible"
            app:srcCompat="@drawable/bass" />

        <ImageView
            android:id="@+id/tremble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/tremble" />

    </RelativeLayout>

    <TextView
        android:id="@+id/frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/informations"
        android:layout_width="368dp"
        android:layout_height="224dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:id="@+id/timeLeft"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Score: 0.0"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/level"
            android:layout_width="87dp"
            android:layout_height="9dp"
            android:layout_above="@+id/lifes_left"
            android:layout_alignStart="@+id/timeLeft"
            android:text="Current level: 0"
            android:textSize="8sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/combo"
            android:layout_width="87dp"
            android:layout_height="9dp"
            android:layout_above="@+id/level"
            android:layout_alignStart="@+id/timeLeft"
            android:text="Current combo: 0"
            android:textSize="8sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lifes_left"
            android:layout_width="87dp"
            android:layout_height="9dp"
            android:layout_above="@+id/timeLeft"
            android:layout_alignStart="@+id/timeLeft"
            android:layout_marginBottom="-71dp"
            android:text="Lifes left: 3"
            android:textSize="8sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/progress"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/timeLeft"
            android:layout_below="@+id/timeLeft"
            android:text="0/0"
            android:textAlignment="viewEnd"
            android:textSize="8sp"
            android:visibility="invisible" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>